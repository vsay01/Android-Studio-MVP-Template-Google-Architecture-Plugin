<idea-plugin>
    <id>com.github.vsay01.androidstudiomvptemplategooglearchitectureplugin</id>
    <name>Android-Studio-MVP-Template-Google-Architecture-Plugin</name>
    <vendor>vsay01</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.vsay01.androidstudiomvptemplategooglearchitectureplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.vsay01.androidstudiomvptemplategooglearchitectureplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.vsay01.androidstudiomvptemplategooglearchitectureplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
